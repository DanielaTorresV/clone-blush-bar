{
    "store.search": {
        "blocks": ["search-result-layout"],
        "props": {
            "context": {
                "skusFilter": "ALL",
                "simulationBehavior": "skip"
            }
         }
    },    
      "store.search#brand": {
        "blocks": ["search-result-layout"],
        "props": {
            "context": {
                "skusFilter": "ALL",
                "simulationBehavior": "skip"
            }
        }
    },
    "search-result-layout": {
        "blocks": [
            "search-result-layout.desktop",
            "search-result-layout.mobile",
            "search-not-found-layout"
          ]
    },
    "search-result-layout.desktop": {
        "children": [
            "rich-text#desktop-response"
        ]
    },
    "search-result-layout.mobile": {
        "children": [
            "rich-text#mobile-response"
        ]
    },
    "rich-text#desktop-response": {
        "props": {
            "text": "# Desktop Search"
        }
    },
    "rich-text#mobile-response": {
        "props": {
            "text": "# Mobile Search"
        }
    },
    "product-summary.shelf": {
        "title": "Product summary for department, category screen",
        "children": [
            "flex-layout.row#search__summary--imgandwish",
            "product-summary-name",
            "product-rating-inline",
            "product-summary-space",
            "product-summary-sku-selector",
            "product-list-price",
            "product-selling-price",
            "product-summary-space",            
            "product-identifier.summary",
            "add-to-cart-button",
            "modal-trigger#global__quick-view"
          ]
    },
    "flex-layout.row#search__summary--imgandwish": {
        "title": "Row to image and button wishlist",
        "children": [
            "flex-layout.col#search__summary--image",
            "flex-layout.col#search__summary--wishlist"           
        ]
    },
    "flex-layout.col#search__summary--image": {
        "title": "Col to summary image",
        "children": [
            "product-summary-image#search"
        ],
        "props": {
            "width": "97%",
            "horizontalAlign": "left"
        }
    },
    "product-summary-image#search": {
        "props": {
            "showBadge": true,
            "height": 110
          }
    },
    "flex-layout.col#search__summary--wishlist": {
        "title": "Col to button add to wishlist",
        "children": [
            "add-to-list-btn"
        ],
        "props": {
            "width": "3%",
            "horizontalAlign": "right",
            "verticalAlign": "bottom"
        }
    },
    "product-summary-name": {
        "title": "Name Product",
        "props": {
            "tag": "h3"
        }
    },
    "product-summary-sku-selector": {
        "props": {
            "hideImpossibleCombinations": false
          }
    },
    "add-to-cart-button": {
        "props": {
            "text": "COMPRAR"
        }
    },
    "modal-trigger#global__quick-view": {
        "title": "Modal Trigger",
        "children": [
            "rich-text#global__quick-view--trigger",
            "modal-layout#global__quick-view--modal"
        ]
    },
    "rich-text#global__quick-view--trigger": {
        "title": "Trigger Text to Modal",
        "props": {
            "text": "Vista RÃ¡pida",
            "textAlignment": "CENTER",
            "textPosition": "CENTER",
            "textColor": "c-emphasis",
            "blockClass": "quick-view--trigger"
        }
    },
    "modal-layout#global__quick-view--modal": {
        "title": "Modal",
        "children": [
            "flex-layout.row#quick-view__modal"
        ]
    },
    "flex-layout.row#quick-view__modal": {
        "title": "Row Modal",
        "children": [
            "flex-layout.col#quick-view__modal--image",
            "flex-layout.col#quick-view__modal--info"
        ]
    },
    "flex-layout.col#quick-view__modal--image": {
        "title": "Col Modal Image",
        "children": [
            "product-images"
        ],
        "props": {
            "blockClass": "quick-view__modal--image"
        }
    },
    "product-images": {
        "props": {
            "maxHeight": 250
        }
    },
    "flex-layout.col#quick-view__modal--info": {
        "title": "Col Modal Info",
        "children": [
            "add-to-list-btn",
            "vtex.store-components:product-name",
            "vtex.store-components:product-brand",
            "product-list-price",
            "product-selling-price",
            "product-description",
            "share",
            "product-quantity",
            "add-to-cart-button"
        ],
        "props": {
            "blockClass": "quick-view__modal--info",
            "horizontalAlign": "center",
            "verticalAlign": "middle"
        }
    }
}